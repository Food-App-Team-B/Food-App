import javax.swing.*;
import java.awt.*;

public class RecipeAppGUI extends JFrame {
    public RecipeAppGUI() {
        setTitle("Recipe App");
        // Set the size to take up 4/5 of the screen
        Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
        setSize(screenSize.width * 4 / 5, screenSize.height * 4 / 5);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // Center the window on the screen

        // Create components
        JPanel mainPanel = new JPanel();
        mainPanel.setLayout(new BorderLayout());

        JTextArea recipeTextArea = new JTextArea();
        recipeTextArea.setEditable(false);
        recipeTextArea.setLineWrap(true); // Enable text wrapping
        recipeTextArea.setWrapStyleWord(true); // Wrap at word boundaries
        JScrollPane scrollPane = new JScrollPane(recipeTextArea);

        // Set the preferred size of the scroll pane to take up the top half of the window
        scrollPane.setPreferredSize(new Dimension(getWidth(), getHeight() / 2));

        mainPanel.add(scrollPane, BorderLayout.CENTER);

        JPanel buttonPanel = new JPanel(new GridLayout(3, 2, 5, 5)); // 3x2 grid layout for buttons
        JButton cookbookButton = new JButton("Cookbook");
        JButton ingredientsButton = new JButton("Ingredients");
        JButton recommentButton = new JButton("Recommend Something");
        JButton searchButton = new JButton("Search"); // TODO Placement text "search recipe"
        JButton cleanButton = new JButton("Clean Pantry"); // TODO Notification that asks if you are sure
        JButton prefButton = new JButton("Preferences");

        // Add buttons to the panel
        buttonPanel.add(cookbookButton);
        buttonPanel.add(ingredientsButton);
        buttonPanel.add(recommentButton);
        buttonPanel.add(searchButton);
        buttonPanel.add(cleanButton);
        buttonPanel.add(prefButton);

        mainPanel.add(buttonPanel, BorderLayout.SOUTH);

        // Add some placeholder text to the recipe text area
        recipeTextArea.setText("Lorem ipsum dolor sit amet, consectetur adipiscing elit. " +
                "Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. " +
                "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.");

        add(mainPanel);
        setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> new RecipeAppGUI());
    }
}
